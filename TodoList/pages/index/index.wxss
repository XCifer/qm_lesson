/**app.wxss**/

Page {
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 




.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.list{
  height:0;
  flex:1;
}

.titleBar{
  display: flex;
  box-sizing: border-box;
  border-bottom: 1px solid #eeeeee;
  padding: 0 30rpx 10rpx;
  align-items: center;
}
.titleBar .status{
  flex: 1;
  flex-direction: row;
}
.titleBar .status .add{
  overflow: hidden;
}
.titleBar .status .add button{
  margin: 0;
  float: right;
}
.titleBar .status text {
  display: inline-block;
  font-size: 13pt;
  margin-right: 18rpx;
  text-align: center;
  width: 150rpx;
  border-radius: 5rpx;
}

.titleBar .status text.active{
  background-color:#ca2100;
  color: #eeeeee;

}
.lists{
  height: 0;
  flex: 1;
}
.nodata{
  padding: 30rpx;
  font-size: 11pt;
}